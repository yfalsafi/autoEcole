                            <td class="mr-4"><a href="{{ path('produit_list', {id: purchase.id}) }}">{{ purchase.buyAt |date('d/m/Y') }}</a></td>

                        </tr>

                {% endfor %}
            </table>
        </div>
    </section>


{% endblock %}
