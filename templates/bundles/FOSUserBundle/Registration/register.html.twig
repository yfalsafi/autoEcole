{% extends 'base.html.twig' %}

{% block title %}{% endblock %}



{% block body %}
    <section>
        <div class="row justify-content-center">
            <div class="col-md-3">
                <div class="card">
                    <header class="card-header">
                        <a href="/login" class="float-right btn btn-outline-primary mt-1">Se connecter</a>
                        <h4 class="card-title mt-2">Inscription</h4>
                    </header>
                    <article class="card-body">
                            {{ form_start(form, {'method': 'post', 'action': '', 'attr': {'class': 'form-signin'}}) }}
                        <div class="form-row">
                            <div class="col form-group">
                            {{ form_row(form.email, { 'attr':{'class':'form-control'}}) }}
                            </div> <!-- form-group end.// -->
                            <div class="col form-group">
                            {{ form_row(form.username, { 'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col form-group">
                                {{ form_row(form.plainPassword.first, { 'attr':{'class':'form-control'}}) }}
                            </div>
                            <div class="col form-group">
                                {{ form_row(form.plainPassword.second, { 'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col form-group">
                                {{ form_row(form.name, { 'attr':{'class':'form-control'}}) }}
                            </div>
                            <div class="col form-group">
                            {{ form_row(form.firstName, { 'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_row(form.birth, { 'attr':{'class':'form-control'}}) }}
                        </div>
                        <div class="form-row">
                            <div class="col form-group">
                            {{ form_row(form.address, {'attr':{'class':'form-control'}}) }}
                            </div>
                            <div class="col form-group">
                            {{ form_row(form.city, { 'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                                <input class="btn btn-primary btn-block" type="submit" value="{{ 'Submit'|trans }}" />
                        </div>
                            {{ form_end(form) }}
                    </article> <!-- card-body end .// -->
                    <div class="border-top card-body text-center">Have an account? <a href="/login">Se connecter</a></div>
                </div> <!-- card.// -->
            </div> <!-- col.//-->

        </div> <!-- row.//-->



    </section>

{% endblock %}
